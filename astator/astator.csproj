<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0-android</TargetFrameworks>
		<OutputType>Exe</OutputType>
		<RootNamespace>astator</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
    
		<!-- Display name -->
		<ApplicationTitle>astator</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.astator</ApplicationId>

		<!-- Versions -->
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Required for C# Hot Reload -->
		<UseInterpreter Condition="'$(Configuration)' == 'Debug'">True</UseInterpreter>

		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-android'">24.0</SupportedOSPlatformVersion>
		<AndroidPackageFormat>apk</AndroidPackageFormat>
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\appicon.svg" ForegroundFile="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\Fonts\OPPOSans-R.ttf" />
	  <None Remove="Resources\Images\dir.svg" />
	  <None Remove="Resources\Images\doc.svg" />
	  <None Remove="Resources\Images\doc_on.svg" />
	  <None Remove="Resources\Images\file.png" />
	  <None Remove="Resources\Images\file_csproj.png" />
	  <None Remove="Resources\Images\file_script.png" />
	  <None Remove="Resources\Images\file_xml.png" />
	  <None Remove="Resources\Images\home.svg" />
	  <None Remove="Resources\Images\home_on.svg" />
	  <None Remove="Resources\Images\log.svg" />
	  <None Remove="Resources\Images\log_on.svg" />
	  <None Remove="Resources\Images\more.png" />
	  <None Remove="Resources\Images\right.png" />
	  <None Remove="Resources\Images\settings.svg" />
	  <None Remove="Resources\Images\settings_on.svg" />
	  <None Remove="Resources\jni\arm64-v8a\libc++_shared.so" />
	  <None Remove="Resources\jni\arm64-v8a\libhiai.so" />
	  <None Remove="Resources\jni\arm64-v8a\libhiai_ir.so" />
	  <None Remove="Resources\jni\arm64-v8a\libhiai_ir_build.so" />
	  <None Remove="Resources\jni\arm64-v8a\libNative.so" />
	  <None Remove="Resources\jni\arm64-v8a\libpaddle_light_api_shared.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libc++_shared.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libhiai.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libhiai_ir.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libhiai_ir_build.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libNative.so" />
	  <None Remove="Resources\jni\armeabi-v7a\libpaddle_light_api_shared.so" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="System.Reactive" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Views\NavBarView.xaml.cs">
	    <DependentUpon>NavBarView.xaml</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <MauiXaml Update="Pages\DocPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\HomePage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\LogPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\SettingsPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\NavBarView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\PathCard.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>


	<ItemGroup>
		<AndroidNativeLibrary Include="Resources\jni\*\*" />
	</ItemGroup>


	<ItemGroup>
	  <Reference Include="ApkBuilderBinding">
	    <HintPath>..\library\3rdparty\ApkBuilderBinding\bin\Release\net6.0-android\ApkBuilderBinding.dll</HintPath>
	  </Reference>
	</ItemGroup>

</Project>
