<ContentPage
    x:Class="astator.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:astator.Pages"
    xmlns:v="clr-namespace:astator.Views"
    NavigationPage.HasNavigationBar="False">
    <Grid BackgroundColor="{DynamicResource PageBackgroundColor}">

        <Grid HeightRequest="55" VerticalOptions="Start">
            <Label
                Margin="20,0"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Start"
                Text="工作台"
                VerticalOptions="Center" />
        </Grid>
        <VerticalStackLayout />
        <v:NavBarView
            x:Name="NavBar"
            HeightRequest="55"
            VerticalOptions="End" />
    </Grid>
</ContentPage>