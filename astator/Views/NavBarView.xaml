<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="astator.Views.NavBarView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:astator.Views">
    <GridLayout ColumnDefinitions="*,*,*,*">
        <GridLayout.Resources>
            <Style TargetType="v:CustomImageButton">
                <Setter Property="Padding" Value="10" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>
        </GridLayout.Resources>
        <v:CustomImageButton
            x:Name="HomeTab"
            Clicked="HomeTab_Clicked"
            GridLayout.Column="0"
            Source="home.png" />
        <v:CustomImageButton
            x:Name="LogTab"
            Clicked="LogTab_Clicked"
            GridLayout.Column="1"
            Source="log.png" />
        <v:CustomImageButton
            x:Name="DocTab"
            Clicked="DocTab_Clicked"
            GridLayout.Column="2"
            Source="doc.png" />
        <v:CustomImageButton
            x:Name="SettingsTab"
            Clicked="SettingsTab_Clicked"
            GridLayout.Column="3"
            Source="settings.png" />
    </GridLayout>
</ContentView>